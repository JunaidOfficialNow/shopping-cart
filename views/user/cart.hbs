<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-info ml-auto">Checkout</a>
        </div>

        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Price</th>
       
                    <th scope="col">Image</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.Name}}</th>
                    <td>{{this.price}}</td>
                    <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td>
                        <button class="cart-item-count btn btn-primary mr-3">-</button><span>1</span> <button class="btn btn-primary cart-item-count ml-3">+</button>
                    </td>
                    <td>
                        <a href="/remove-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}}')">Remove</a>
                        {{!-- <a href="/admin/delete-product?id={{this._id}}&name=junaid" class="btn btn-danger">Delete</a> --}}
                        
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>