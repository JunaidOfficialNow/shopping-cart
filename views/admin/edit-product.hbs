<section>
    <div class="container">

        {{!-- <div class="row mt-4">
            <a href="/admin" class="btn btn-info ml-auto">View products</a>
        </div> --}}
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center mt-4">Edit Product</h2>
                {{#each product}}
                <form action="/admin/edit-product/{{this._id}}" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{this.Name}}">

                    <label for="">Category</label>
                    <input type="text" name="category" class="form-control" value="{{this.category}}">

                    <label for="">Price</label>
                    <input type="text" name="price" class="form-control" value="{{this.price}}">

                    <label for="">Description</label>
                    <input type="text" name="description" class="form-control" value="{{this.description}}">

                    <label for="">Image</label>
                    <img src="/product-images/{{this._id}}.jpg" alt="" style="height: auto;width: 100px;" id="imgView">
                    <input type="file" name="image" class="form-control" onchange="viewImage(event)">
                    {{/each}}
                    <button class="btn btn-info mt-4" type="submit">Edit Product</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>